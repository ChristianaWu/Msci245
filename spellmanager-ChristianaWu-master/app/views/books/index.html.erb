<p id="notice"><%= flash[:notice] %></p>

<h1>All Books</h1>

<p>
<%= link_to 'Create New Book', new_book_path %> | <%= link_to "Home", root_path %>    
</p>    

<table>
  <thead>
    <tr>
      <th>Spell Count</th>
      <th>Book Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.num_spells %></td>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= form_with model: book, method: :delete, local: true do |f| %>
                <%= f.submit 'Delete Book' %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>



